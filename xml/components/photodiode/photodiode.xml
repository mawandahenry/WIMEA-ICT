<component>
	<!-- COMPONENT NAME -->
	<name>Photodiode</name>
	
	<!-- COMPONENT IMAGES -->
	<image title="general">photodiode_main.png</image>
	<image title="thumbnail"></image>
	<!-- By interface we mean the specific parts on the component where connections are made -->
